<%= image_tag @user.foto.url(:normal) %>
<%= @user.nome %>
<%= link_to "Seguir", new_user_seguidor_path(@user) %>
<%= link_to "Seguidores", user_seguidores_path(@user) %>
<%= link_to "Seguindo", "/users/#{@user.id}/seguindo" %>

<ul>
	<li><%= link_to "Atividades - #{@user.atividades.count}", user_path(@user)%></li>
	<li><%= link_to "Comentários - #{@user.comments.count}", user_path(@user) + "?filtro=Comment"%></li>
	<li><%= link_to "Vídeos - #{@user.videos.count}", user_path(@user) + "?filtro=Video"%></li>
	<li><%= link_to "Links - #{@user.links.count}", user_path(@user) + "?filtro=Link"%></li>
	<li><%= link_to "Referências - #{@user.referencias.count}", user_path(@user) + "?filtro=Referencia"%></li>
<ul>

