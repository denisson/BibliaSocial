<h5 class="tituloDivisor">Editando Perfil</h5>

<%= form_for @user_edit, :html => { :multipart => true } do |f| %>
  <%= bibliasocial_error_messages(@user_edit) %>
  <div class="inputText">
    <%= f.label :nome %>
    <%= f.text_field :nome, {:style => 'width: 98%;'} %>
  </div>
  
  <div class="inputText">
    <%= f.label :foto, "Foto do Perfil" %>
    <%= f.file_field :foto %>
  </div>

  <div class="botoes">
    <%= f.submit "Salvar Alterações", :class => "botao positive" %>
  </div>
<% end %>