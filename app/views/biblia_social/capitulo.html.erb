<%= title "#{@livro.nome} #{@capitulo.numero} - BíbliaSocial.com" %>

<div id="content">
    <%= breadcrumb [['Bíblia', '/'],[@livro.nome, "/#{@livro.permalink}"],["Capítulo #{@capitulo.numero}", "/#{@livro.permalink}/#{@capitulo.numero}"]] %>
    <h2 class="titulo clear" data-nome="<%= "#{@livro.nome} #{@capitulo.numero}" %>" data-url="<%= "http://www.bibliasocial.com/#{@livro.permalink}/#{@capitulo.numero}" %>"><span class="comment_count"></span><%= "#{@livro.nome} #{@capitulo.numero}" %></h2>
    <% @versiculos.each_with_index do |versiculo, i| %>
        <%= render :partial => 'partials/versiculo', :locals => { :versiculo => versiculo, :i => i } %>
    <% end %>

    <p class="previous_and_next">
        <%= link_to "Anterior", "/#{@capitulo.anterior.livro.permalink}/#{@capitulo.anterior.numero}" if @capitulo.anterior %> 
        « Capítulo <%= @capitulo.numero %> »
        <%= link_to "Próximo", "/#{@capitulo.proximo.livro.permalink}/#{@capitulo.proximo.numero}" if @capitulo.proximo %>
    </p>

    <h2>Livros</h2>
    <%= render :partial => 'partials/livros' %>
</div>
<div id="sidebar">
    <h3>Comentários</h3>
    <%= render :partial => "partials/atividade/lista", :locals => {:itens => @itens, :mostrar_versiculo => true}%>
</div>