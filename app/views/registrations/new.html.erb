<div id="content" class="login">
  <h2>Já é cadastrado?</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="inputText">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="inputText">
      <%= f.label :password, "Senha" %>
      <%= f.password_field :password %>
    </div>

    <div class="lembrarSenhaContainer"><%= f.check_box :remember_me %> <%= f.label :remember_me, "Lembre-me" %> <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), {:class=>'esqueceuSenha'} %></div>

    <div class="botoes"><%= f.submit "Entrar", {:class => 'botao positive'} %></div>
  <% end %>

</div>


<div id="sidebar" class="login">

  <h2>Ainda não? Cadastre-se!</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="inputText">
        <%= f.label :nome %>
        <%= f.text_field :nome %>
      </div>

      <div class="inputText">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="inputText">
        <%= f.label :password, 'Senha' %>
        <%= f.password_field :password %>
      </div>

      <div class="botoes"><%= f.submit "Cadastre-se", {:class => 'botao positive'} %></div>
  <% end %>
</div>